<% title = 'Add Your Todays Weight' %>


<style>
    body {
      background-color: #f5f5f5; /* Light grey background */
    }
    .form-container {
      background-color: white;
      border: 1px solid #ccc;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .center-box {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
  </style>

<% if(edit){ %>
  <div class="container mt-5">
    <div class="form-container ">
      <h3 class="text-center mb-4">Edit
      </h3>
      <form action="/edit/<%= data.id%>" method="post">
        
        <div class="mb-3">
          <label for="weight" class="form-label">Weight (kg)</label>
          <input type="number" value="<%= data.weight%>" class="form-control" id="weight" name="weight" placeholder="Enter your weight">
        </div>
        <div class="mb-3 d-none">
          <label for="currentDate" class="form-label">Current Date</label>
          <input type="text"  value="<%= data.date%>" id="weight" name="date"  class="form-control" id="currentDate">
        </div>
        <div class="mb-3 d-none">
          <label for="currentDate" class="form-label">Current Time</label>
          <input type="text"  value="<%= data.time%>" id="weight" name="time"  class="form-control" id="currentDate">
        </div>
        <button type="submit" class="btn btn-dark w-100">update</button>
      </form>
    </div>
  </div>

<% } else{  %>
  <%- include('./navbar')%>

  <div class="container mt-5">

    <div class="form-container ">
      <h3 class="text-center mb-4"><%= title %>
      </h3>
      <form action="/addWeight" method="post">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username">
        </div>
        <div class="mb-3">
          <label for="weight" class="form-label">Weight (kg)</label>
          <input type="number" class="form-control" id="weight" name="weight" placeholder="Enter your weight">
        </div>
        <div class="mb-3 d-none">
          <label for="currentDate" class="form-label">Current Date</label>
          <input type="text"  value="<%= currentDate%>" id="weight" name="date"  class="form-control" id="currentDate">
        </div>
        <div class="mb-3 d-none">
          <label for="currentDate" class="form-label">Current Time</label>
          <input type="text"  value="<%= currentTime%>" id="weight" name="time"  class="form-control" id="currentDate">
        </div>
        <button type="submit" class="btn btn-dark w-100">Add</button>
      </form>
      <% if(message){ %>
        <p class="text-center text-danger mt-5"><%= message%></p>
   <% } %>
  
    </div>
    <div class="d-flex justify-content-center align-items-center mt-5">
     <a href="/listingPage"><button type="submit" class="btn btn-dark ">view Listing page</button></a> 
    </div>
  
  </div>
  <% } %>


  
  



